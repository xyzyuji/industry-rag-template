FROM python:3.10-slim

WORKDIR /app

# ★ これを確実に効かせる
ENV PYTHONPATH=/app

COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# backend の API
COPY backend/public_api.py ./public_api.py

# ルートの public をコピー（あなたの方針のまま）
COPY public/ ./public/

ENV PORT=8080
EXPOSE 8080

# ★ 起動方法を少しだけ変える（重要）
CMD ["sh", "-c", "python -c \"import sys; print(sys.path)\" && uvicorn public_api:app --host 0.0.0.0 --port $PORT"]
